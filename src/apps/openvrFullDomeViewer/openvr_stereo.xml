<?xml version="1.0" ?>
<Cluster masterAddress="localhost">
  <Node address="localhost" port="20400">
    <Window tags="OpenVR" fullScreen="false" msaa="4">
      <Stereo type="side_by_side" />
      <!-- Res is equal to the Recommend target size -->
      <!-- This was tested with an Oculus Rift CV1 -->
      <Size x="1332" y="793" />
      <Res x="2664" y="1586" />
      <Viewport>
        <Pos x="0.0" y="0.0" />
        <Size x="1.0" y="1.0" />
        <Projectionplane>
          <!-- Lower left -->
          <Pos x="-1.7156" y="-0.965" z="0.0" />
          <!-- Upper left -->
          <Pos x="-1.7156" y="0.965" z="0.0" />
          <!-- Upper right -->
          <Pos x="1.7156" y="0.965" z="0.0" />
        </Projectionplane>
      </Viewport>
    </Window>
    <Window fullScreen="false" name="Fisheye">
      <Pos x="100" y="100" />
      <Size x="1024" y="512" />
      <Viewport eye="left">
        <Pos x="0.0" y="0.0" />
        <Size x="0.5" y="1.0" />
        <FisheyeProjection fov="180" quality="medium">
          <Background r="0.1" g="0.1" b="0.1" a="1.0" />
        </FisheyeProjection>
      </Viewport>
            <Viewport eye="right">
        <Pos x="0.5" y="0.0" />
        <Size x="0.5" y="1.0" />
        <FisheyeProjection fov="180" quality="medium">
          <Background r="0.1" g="0.1" b="0.1" a="1.0" />
        </FisheyeProjection>
      </Viewport>
    </Window>
  </Node>
</Cluster>
